{
  "type": "object",
  "properties": {
    "personTitle": {
      "type": "string",
      "enum":[
        "Mr", "Ms", "Dr.", "Assist.Prof.Dr.","Assoc.Prof.Dr.","Prof.Dr.","Other"
      ]
    },
    "personName": {
      "type": "string",
      "minLength": 2,
      "description": "Please enter your first name"
    },
    "personMiddleNames": {
      "type": "string",
      "description": "Please enter your second name"
    },
    
    "personSurname": {
      "type": "string",
      "minLength": 2,
      "description": "Please enter your second name"
    },
    "personDisplayName": {
      "type": "string",
      "minLength": 2,
      "description": "Please enter your second name"
    },
    "personGender": {
      "type": "string",
      "enum":[
        "Female",
        "Male",
        "Prefer not to say"
      ]
    },
    "personOrcidID": {
      "type": "string"
    },
    "personDOB": {
      "type": "string",
      "format":"date"
    },
    "personCityOB": {
      "type": "string"
    },
    "personCountryOB": {
      "type": "string"
    },
    "personMaritalStatus": {
      "type": "string",
      "enum": [
        "Single",
        "Married",
        "Widowed",
        "Prefer not to say"
        ]
    },

    "Citizenship": {
      "type":"array",
      "items":{
        "type": "object",
        "properties": {
          "personCitizenship": {
            "type": "string",
            "title":"Please add.",
            "enum": [
              "UK",
              "USA",
              "Canada",
              "Germany",
              "France",
              "China",
              "India",
              "Turkey",
              "Spain",
              "The Netherlands",
              "Belgium"
            ]
          }
        }
      }
    },
    "WorkPermit": {
      "type":"array",
      "items":{
        "type": "object",
        "properties": {
          "yourWorkPermits": {
            "type": "string",
            "title":"Please add.",
            "enum": [
              "UK",
              "USA",
              "Canada",
              "Germany",
              "France",
              "China",
              "India",
              "Turkey",
              "Spain",
              "The Netherlands",
              "Belgium"
            ]
          }
        }}
    },
    "address": {
      "type": "array",
      "title":"Address (please click the address type on the numbered list)",
      "items": {
        "type": "object",
        "title": "Users",
        "properties": {
          "personAddressType": {
            "type": "string",
            "enum":[
              "Private",
              "Legal",
              "Work"
            ]
          },
          "personFlatNo": {
            "type": "string"
          },
          "personBuildingNo": {
            "type": "string"
            
          },
          "personStreet": {
            "type": "string"
          },
          "personDistrict": {
            "type": "string"
          },
          "personPostalCode": {
            "type": "string"
          },
          "personCity": {
            "type": "string"
          }, 
          "personState": {
            "type": "string"
          },
          "personCountry": {
            "type": "string"
          }
        }
      }
    },
    "phone": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "personPhoneType": {
            "title":"Type",
            "type": "string",
              "enum": [
                "Mobile",
                "Home",
                "Work"
                ]
          },
          "personPhoneCountryCode": {
            "type": "string",
            "title":"Country Code",
            "enum": [
              "+1",
              "+31",
              "+44"
              ]
          },
          "personPhoneNumber":{
            "type":"string",
            "title":"Number"
          }
        }
      }
    },
    "email": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "personEmailType": {
            "type": "string",
            "title":"Type",
              "enum": [
                "Personal",
                "Work"
                ]
          },
          "personEmail": {
            "type": "string",
            "title":"Email",
            "format":"email"
          }
        }
      }
    },
    "onlinePlatforms": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "personPlatformType": {
            "type": "string",
            "title":"Platform",
              "enum": [
                "Website",
                "LinkedIn",
                "Facebook",
                "Twitter",
                "WhatsApp",
                "Instagram",
                "GitHub",
                "Other"
                ]
          },
          "personPlatformUrl": {
            "type": "string",
           
            "title": "Profile Link"
          }
        }
      }
    }
  },

  "required": [
    "personName",
    "personSurname"
  ]
}